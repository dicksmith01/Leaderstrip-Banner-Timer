<!--
	Coops Countdown timer - 2014
	
	Version 1.0

	The code will countdown the hour on the hour. It uses
	native javascript and therefore will not require any libraries
	to run. It is currently modified for our leaderstrip and more 
	importantly our hour of power promotion.
	
	-Christopher Cooper
-->



<style>
	#cover {
		background-repeat: no-repeat;
		position: relative;
		}

	#count-positioner {
		position: absolute;
		top: 10px;
		left: 50px;
}
</style>


<script type="text/javascript">

	function ShowTimes() {
		var now = new Date();
		var hrs = 23-now.getHours();
		var mins = 59-now.getMinutes();
		var secs = 59-now.getSeconds();
		var str = '';
      
	
	/** Countdown timer colour changer **/
	if(mins < 10) 
	
	{document.getElementById("countdownToMidnight",".pulse").style.color="#FF0000";}
	
	else
	
	{document.getElementById("countdownToMidnight").style.color="#000000";}
	 
	 


	/** Countdown timer string function **/	
	if (secs < 10 && mins <10)
 
		str += '<br>'+ '0' + mins+':'+ '0' +secs;
	
		else 
		
	if (secs < 10)
		
		str += '<br>' + mins+':'+ '0' +secs;
 
		else
		
	if (mins < 10)
	
		str += '<br>'+ '0' + mins+':' +secs;
		
		else
 
	str += '<br>'+mins+':'+secs+'';
	document.getElementById('countdownToMidnight').innerHTML = str;}
	
	
			var _cntDown;
				function StopTimes() {
				clearInterval(_cntDown);
}

</script>


<img src="http://www.dicksmith.com.au/get.php/media/wysiwyg/banner/AU/980xX_Leaderstrips/WK4_HOP_HPLeaderstrip_960x150_ANZ.JPG" />
<body onload="_cntDown=setInterval('ShowTimes()',1000)">
	<div id="cover" >
	<div id="count-positioner">
	<div id="countdownToMidnight" style=" margin-top: -192px; margin-left: 735px; font-size: 46pt; font-family: fantasy; "></div>
	</div>
	</div>
</body>
